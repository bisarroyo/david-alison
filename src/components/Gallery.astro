---
import Camera from '@/icons/Camera.astro'
import 'swiper/css'
import image1 from '../assets/carrousel/image1.webp'
import image2 from '../assets/carrousel/image2.webp'
import image3 from '../assets/carrousel/image3.webp'
import image4 from '../assets/carrousel/image4.webp'
import image5 from '../assets/carrousel/image5.webp'
import image6 from '../assets/carrousel/image6.webp'
import image7 from '../assets/carrousel/image7.webp'
import image8 from '../assets/carrousel/image8.webp'
import image9 from '../assets/carrousel/image9.webp'
import image10 from '../assets/carrousel/image10.webp'
import image11 from '../assets/carrousel/image11.webp'
import image12 from '../assets/carrousel/image12.webp'
import image13 from '../assets/carrousel/image13.webp'
---

<section>
    <div class='header'>
        <h2>Retratos de nuestro amor</h2>
        <p>Un minuto, un segundo, un instante que queda en la eternidad</p>
        <Camera class='icon' />
    </div>
    <div class='swiper mySwiper'>
        <div class='swiper-wrapper'>
            <div class='swiper-slide'>
                <img src={image1.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image2.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image3.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image4.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image5.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image6.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image7.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image8.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image9.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image10.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image11.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image12.src} alt='' />
            </div>
            <div class='swiper-slide'>
                <img src={image13.src} alt='' />
            </div>
        </div>
        <div class='swiper-pagination'></div>
    </div>
</section>
<style>
    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 5rem 1rem;
        color: var(--color-text-foreground);
        text-align: center;
    }
    .icon {
        width: 5rem;
        height: 5rem;
        color: var(--color-text-foreground);
        margin: 1rem;
    }
    .swiper {
        width: 100%;
        height: 100%;
    }

    .swiper-slide {
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        aspect-ratio: 1 / 1.5;
        border-radius: 20px;
        overflow: hidden;
        min-height: 200px;
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        aspect-ratio: 1 / 1.5;
        object-fit: cover;
    }
</style>

<script>
    import Swiper from 'swiper'
    import { Autoplay, Pagination } from 'swiper/modules'
    Swiper.use([Autoplay, Pagination])

    var swiper = new Swiper('.mySwiper', {
        autoplay: {
            delay: 5000,
            disableOnInteraction: false
        },
        loop: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true
        },
        breakpoints: {
            640: {
                slidesPerView: 1,
                spaceBetween: 20
            },
            768: {
                slidesPerView: 2,
                spaceBetween: 40
            },
            1024: {
                slidesPerView: 3,
                spaceBetween: 50
            }
        }
    })
</script>
