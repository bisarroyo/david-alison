---
import Quote from '@/icons/Quote.astro'
---

<section>
    <h1>Alison <span>&</span> David</h1>
    <div class='quote'>
        <Quote class='quote quote-rotate' />
        <p>Lorem ipsum dolor amet</p>
        <Quote class='quote' />
    </div>
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100dvh;
        gap: 1rem;
        background-color: bisque;
    }

    .quote {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        .quote {
            width: 4rem;
            height: 4rem;
            color: var(--color-text-foreground);
            vertical-align: middle;
            margin-left: 0.5rem;
            &.quote-rotate {
                transform: rotate(180deg);
            }
        }
    }
</style>
