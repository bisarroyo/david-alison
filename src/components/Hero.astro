---
import Quote from '@/icons/Quote.astro'
---

<section>
    <p class='name'>Allison</p>
    <p class='y'>&</p>
    <p class='name'>David</p>
    <div class='quote'>
        <Quote class='quote-icon quote-rotate' />
        <p>
            Todos somos mortales, hasta el primer beso y la segunda copa de vino
        </p>
        <Quote class='quote-icon' />
    </div>
</section>

<style>
    section {
        padding: 0;
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: end;
        align-items: center;
        height: 100dvh;
        gap: 1rem;
        /* Hero background image */
        background-color: bisque;
        color: var(--color-white);

        &::before {
            content: '';
            position: fixed;
            inset: 0;
            background-image: url('../assets/hero-image.webp');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-position: center -350px;
            z-index: -1;
            @media (max-width: 2100px) {
                background-position: center -260px;
            }
            @media (max-width: 990px) {
                background-position: center;
            }
        }

        .y {
            font-family: var(--font-family-parisienne);
            font-size: clamp(1.5rem, 10vw, 3rem);
            text-align: center;
            margin: 0;
            font-weight: normal;
            line-height: 0.9;
        }
    }
    span {
        font-size: 1.5rem;
        line-height: 1;
    }

    .quote {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-bottom: 40px;
        p {
            padding: 0 20px;
            text-wrap: balance;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        .quote-icon {
            width: 2.5rem;
            height: 2.5rem;
            color: rgba(255, 255, 255, 0.8);
            vertical-align: middle;
            margin-left: 0.5rem;
            &.quote-rotate {
                transform: rotate(180deg);
            }
            @media (max-width: 990px) {
                width: 1.5rem;
                height: 1.5rem;
            }
        }
    }
</style>
